<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aplication.onlinepharmacy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/pharmacy_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/pharmacy_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnlinePharmacy"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".views.LoginActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".views.OrderPalcedWithSuccess"
            android:exported="false" />
        <activity
            android:name=".views.CheckOutActivity"
            android:exported="false" />
        <activity
            android:name=".views.product_detaills"
            android:exported="false" />
        <activity
            android:name=".views.categoryProductsActivity"
            android:exported="false" />
        <activity
            android:name=".views.MainActivity"
            android:exported="true">
           </activity>
    </application>

</manifest>