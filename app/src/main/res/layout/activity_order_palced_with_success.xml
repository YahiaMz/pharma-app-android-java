<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.OrderPalcedWithSuccess">

    <ImageView
        android:id="@+id/ordersUCCESSImagevIEW"
        android:layout_width="254dp"
        android:layout_height="264dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".3"
        android:src="@drawable/ic_orderplacedwithsuccess"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="32dp"
        android:text="@string/order_successful"
        app:layout_constraintTop_toBottomOf="@id/ordersUCCESSImagevIEW"
        />

</androidx.constraintlayout.widget.ConstraintLayout>